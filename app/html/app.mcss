App {
  background: var(--app-border-background)
  font-family: arial, sans-serif

  overflow: hidden

  min-height: 0px
  height: 100%
  width: 100%

  position: relative

  div.Hypertabs {
    position: absolute

    top: var(--app-border-width)
    bottom: var(--app-border-width)
    left: var(--app-border-width)
    right: var(--app-border-width)
  }
}
